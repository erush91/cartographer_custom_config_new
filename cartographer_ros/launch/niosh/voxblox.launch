<?xml version="1.0" encoding="ISO-8859-15"?>

<launch>
  <arg name="frame_id" default="odom" />
  <arg name="verbose" default="false"/>
    
    <node name="voxblox_node" pkg="voxblox_ros" type="esdf_server" output="screen" args="-alsologtostderr" clear_params="true">

      <remap from="pointcloud" to="/H02/ouster_driver/points"/>
      <remap from="voxblox_node/esdf_map_out" to="voxblox_node/esdf_map_out" />
      <remap from="voxblox_node/tsdf_map_out" to="voxblox_node/tsdf_map_out" />

      <param name="max_block_distance_from_body" value="7.0" /> <!-- 7.0 -->
      <param name="max_consecutive_ray_collisions" value="0" />

      <param name="traversability_radius" value="0.7" />
      <param name="publish_traversable" value="true" />
      <param name="start_voxel_subsampling_factor" value="1" />

      <!-- Publishing settings. -->
      <param name="publish_tsdf_map" value="false" />
      <param name="publish_esdf_map" value="false" />
      <param name="publish_pointclouds" value="true" />
      <param name="publish_slices" value="false" />
      <param name="update_mesh_every_n_sec" value="1.00" />  <!-- was 0.25 -->
      <param name="update_esdf_every_n_sec" value="1.00" />  <!-- was 0.25 -->
      <param name="publish_map_every_n_sec" value="1.00" />  <!-- was 0.25 -->
      <param name="method" value="fast" />
      <param name="tsdf_voxel_size" value="0.10" />
      <param name="tsdf_voxels_per_side" value="16" />
      <param name="esdf_max_distance_m" value="5.0" /> <!-- 5.0 -->
      <param name="max_ray_length_m" value="5.0" /> <!-- 5.0 -->
      <param name="voxel_carving_enabled" value="true" />
      <param name="color_mode" value="color" />
      <param name="use_tf_transforms" value="true" />
      <param name="min_time_between_msgs_sec" value="0.10" />
      <param name="clear_sphere_for_planning" value="true" />
      <param name="occupied_sphere_radius" value="0.7" />
      <param name="clear_sphere_radius" value="1.0" />
      <param name="slice_level" value="1.0" />
      <param name="world_frame" value="$(arg frame_id)" />
      <param name="verbose" value="false" />
    </node>
</launch>
