  <include file="$(find cartographer_ros)/launch/niosh/voxblox.launch"/>

  <node pkg="rosbag" type="play" name="bag_player" args="--clock -s 200 /home/$(env HOSTNAME)/data/niosh/into_carto__outputs_imu_ouster_full_run_2019-08-18-15-20-46.bag"/>
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find cartographer_ros)/rviz.rviz" />

