<launch>

  <param name="use_sim_time" value="true" />

  <node pkg="tf" type="static_transform_publisher" name="mast_sensor_rig_link_tf_ouster_link" args="0.0057089 0 0.07018 0 0 0  /mast_sensor_rig_link /ouster_link 50" />
  <node pkg="tf" type="static_transform_publisher" name="imu_viz_link_tf_imu_link" args="0 0 0 0.707388044877 0.706824956994 0.000562863771533 0.000563312173597 /imu_viz_link /imu_link 50" />
  <node pkg="tf" type="static_transform_publisher" name="imu_link_tf_mast_sensor_rig_link" args="0 -0.003327 0.0135 0.707388044877 0.706824956994 0.000562863771533 0.000563312173597  /imu_link /mast_sensor_rig_link 50" />

  <include file="$(find cartographer_ros)/launch/niosh/carto.launch"/>
