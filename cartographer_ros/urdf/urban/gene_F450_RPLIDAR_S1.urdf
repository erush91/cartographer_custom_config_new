<?xml version="1.0"?>

<robot name="cartographer_backpack_3d">

  <material name="orange">
    <color rgba="1.0 0.5 0.2 1" />
  </material>
  <material name="gray">
    <color rgba="0.2 0.2 0.2 1" />
  </material>

  <link name="3dm_gx5_15">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.06 0.04 0.02" />
      </geometry>
      <material name="orange" />
    </visual>
  </link>

  <link name="laser">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.04" length="0.04" />
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1.0"/>
      </material>
   </visual>
  </link>

  <link name="base_link"/>

  <joint name="imu-joint" type="fixed">
    <parent link="base_link"/>
    <child link="3dm_gx5_15"/>
    <!-- IMU PLACED WITH CABLE COMING OUT FROM FRONT OF QUAD, RIGHT SIDE UP -->
    <!-- RAN WITH MICROSTRAIN_MIPS ROS PACKAGE, SET FRAME_ENU TO TRUE -->
    <!-- ACTUAL FRAME IS NED (BASED ON LOOKING AT IMU MESSAGE DATA) -->
    <!-- THIS ROLL TRANSFORMATION GOES FROM NED (IMU) TO NWU (CARTOGRAPHER BASE LINK) -->
    <origin xyz="0 0 0" rpy="3.14159265359 0 0" />

  </joint>

  <joint name="rplidar-joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <!-- RPLIDAR CABLE COMING OUT FROM BACK OF QUAD, RIGHT SIDE UP -->
    <!-- THIS YAW TRANSFORMATION GOES FROM SEU (RPLIDAR) TO NWU (CARTOGRAPHER BASE LINK) -->   
    <origin xyz="0 0 0" rpy="0 0 3.14159265359" />
  </joint>

</robot>
